{
  "name": "tsundere",
  "version": "0.0.8",
  "description": "Modern task runner for the stubborn ones",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "sideEffects": false,
  "scripts": {
    "build": "yall -p build:transpile build:types",
    "build:bundle": "rollup -c rollup.config.ts --silent",
    "build:cleanup": "yall -p build:clean-dev build:clean-dist",
    "build:clean-dev": "rimraf __dev__/**/*.js",
    "build:clean-dist": "rimraf dist/**/*.js",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --target=node10.4 --format=cjs --outfile=__dev__/cli/index.js",
    "build:es5": "babel __dev__/index.js --out-dir ./ --relative",
    "build:esbuild": "esbuild src/index.ts --bundle --target=es2019 --format=cjs --outfile=__dev__/index.js",
    "build:esm": "esbuild src/index.ts --bundle --platform=node --target=node10.4 --outfile=__dev__/esm/bundle.js",
    "build:transpile": "yall build:cleanup && yall -p build:esbuild build:esm build:cli && yall -p build:es5 build:bundle",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts --no-check --silent",
    "tsundere": "npm run build:transpile && node dist/cli.js",
    "tsun": "node dist/cli.js",
    "compliance": "license-ci-checker --allow serial --allow normalize-package-data",
    "test": "yall -s build:transpile test:run",
    "test:setup": "esbuild test.ts --outfile=__dev__/test.js --target=es2019 --format=cjs",
    "test:start": "node __dev__/test.js",
    "test:run": "yall -s test:setup test:start"
  },
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tommywalkie/tsundere/issues"
  },
  "homepage": "https://github.com/tommywalkie/tsundere#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tommywalkie/tsundere.git"
  },
  "keywords": [
    "task",
    "runner",
    "tsundere",
    "build"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-async-generator-functions": "^7.12.1",
    "@babel/plugin-transform-for-of": "^7.12.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@soncodi/reqqueue": "^1.0.5",
    "@types/async": "^3.2.5",
    "@types/benchmark": "^2.1.0",
    "@types/bluebird": "^3.5.33",
    "@types/node": "^14.14.10",
    "@types/undertaker": "^1.2.3",
    "async": "^3.2.0",
    "async-each": "^1.0.3",
    "benchmark": "^2.1.4",
    "bluebird": "^3.7.2",
    "dts-bundle-generator": "^5.5.0",
    "esbuild": "^0.8.16",
    "fastfall": "^1.5.1",
    "fastparallel": "^2.4.0",
    "foreign": "^3.0.0",
    "license-ci-checker": "^1.2.0",
    "machinegun": "^0.2.0",
    "many-promises": "^0.2.0",
    "one-by-one": "^3.2.8",
    "p-series": "^2.1.0",
    "p-waterfall": "^2.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "run-parallel": "^1.1.10",
    "run-waterfall": "^1.1.7",
    "savoy": "^0.3.1",
    "serial": "^0.0.9",
    "undertaker": "^1.3.0",
    "unqueue": "^1.1.3",
    "yall-scripts": "^1.1.0"
  }
}
